<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:id="@+id/textView32"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Flavors:"
        android:fontFamily="@font/gotham_bold"
        android:layout_gravity="center"
        android:textColor="@color/Dark"
        android:textSize="18sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="18dp"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="top|center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView24"
                android:layout_width="83dp"
                android:layout_height="82dp"
                app:srcCompat="@drawable/chocolate" />

            <RadioButton
                android:id="@+id/chocolate"
                style="@style/customRadioButton4"
                android:lineSpacingExtra="5dp"
                android:text="Chocolate" />

            <ImageView
                android:id="@+id/imageView25"
                android:layout_width="83dp"
                android:layout_height="82dp"
                android:layout_marginTop="21dp"
                app:srcCompat="@drawable/cappucino" />

            <RadioButton
                android:id="@+id/cappucino"
                style="@style/customRadioButton4"
                android:text="Cappucino" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="top|center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView26"
                android:layout_width="83dp"
                android:layout_height="82dp"
                app:srcCompat="@drawable/strawberry" />

            <RadioButton
                android:id="@+id/strawberry"
                style="@style/customRadioButton4"
                android:lineSpacingExtra="5dp"
                android:text="Strawberry" />

            <ImageView
                android:id="@+id/imageView27"
                android:layout_width="83dp"
                android:layout_height="82dp"
                android:layout_marginTop="21dp"
                app:srcCompat="@drawable/green_tea" />

            <RadioButton
                android:id="@+id/green_tea"
                style="@style/customRadioButton4"
                android:text="Green Tea" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="top|center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView28"
                android:layout_width="84dp"
                android:layout_height="82dp"
                app:srcCompat="@drawable/cheese" />

            <RadioButton
                android:id="@+id/cheese"
                style="@style/customRadioButton4"
                android:lineSpacingExtra="5dp"
                android:text="Cheese" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>