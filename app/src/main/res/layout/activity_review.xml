<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Review_Activity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/Light"
        android:theme="@style/AppTheme">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/background"
            android:backgroundTint="@color/Light"
            android:orientation="horizontal"
            android:paddingVertical="17dp"
            android:paddingLeft="18dp"
            android:paddingRight="5dp">

            <ImageButton
                android:id="@+id/imgBack_likes"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:src="@drawable/back_icon_dark"
                android:background="@color/Light"
                android:clickable="true"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:layout_centerVertical="true"
                android:fontFamily="@font/gotham_bold"
                android:gravity="center_vertical"
                android:text="Leave a Review"
                android:textColor="@color/Dark"
                android:textSize="25dp" />

        </LinearLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="30dp"
                android:text="Birthday Custom Cake"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="20dp"
                android:textStyle="bold"/>

            <ImageView
                android:id="@+id/img_cake_pict"
                android:layout_width="240dp"
                android:layout_height="240dp"
                android:layout_gravity="center"/>
                <!--app:srcCompat="@drawable/review_picture_ex" -->

            <TextView
                android:id="@+id/txt_cake_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:background="@drawable/cake_category_background"
                android:paddingHorizontal="15dp"
                android:paddingVertical="3dp"
                android:text="Birthday"
                />

            <TextView
                android:id="@+id/txt_instructions1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Please kindly leave the rating:"
                android:textAlignment="center"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/star_rate1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/rate_not_clicked_yet"/>
                <ImageView
                    android:id="@+id/star_rate2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/rate_not_clicked_yet"/>
                <ImageView
                    android:id="@+id/star_rate3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/rate_not_clicked_yet"/>
                <ImageView
                    android:id="@+id/star_rate4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/rate_not_clicked_yet"/>
                <ImageView
                    android:id="@+id/star_rate5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/rate_not_clicked_yet"/>
            </LinearLayout>

            <TextView
                android:id="@+id/txt_instructions2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:text="Also tell your story or testimony with your cake:"
                android:textAlignment="center"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/edt_testimony"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/edittext_background"
                android:gravity="start|top"
                android:hint="Write here..."
                android:inputType="textMultiLine"
                android:paddingLeft="15dp"
                android:paddingTop="15dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:textSize="12.5dp"
                android:textStyle="bold"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingHorizontal="24dp">

                <TextView
                    android:id="@+id/Title"
                    style="@style/TitleText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="29dp"
                    android:text="Receiver" />

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="5dp"
                    app:srcCompat="@drawable/line" />

                <TextView
                    android:id="@+id/txtNameReceiver"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:text="Alexandria"
                    android:textAppearance="@style/SubTitle" />

                <TextView
                    android:id="@+id/txtEmailReceiver"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="alexandria1@gmail.com"
                    android:textAppearance="@style/Paragraph" />

                <TextView
                    android:id="@+id/txtNomorReceiver"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="087888662729"
                    android:textAppearance="@style/Paragraph" />

                <TextView
                    android:id="@+id/txtAlamatReceiver"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Central Point B no. 13, Kec. Medan Satria, Bekasi 17310"
                    android:textAppearance="@style/Paragraph" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingHorizontal="24dp">

                <TextView
                    android:id="@+id/Title3"
                    style="@style/TitleText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:text="Prices" />

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="5dp"
                    app:srcCompat="@drawable/line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="14sp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Product Price:"
                        android:textAppearance="@style/SubTitle" />

                    <TextView
                        android:id="@+id/txtHargaProduk"
                        style="@style/Harga"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/gotham_light"
                        android:text="Rp. 876.000"
                        android:textColor="@color/Dark" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="14sp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Delivery Price:"
                        android:textAppearance="@style/SubTitle" />

                    <TextView
                        android:id="@+id/txtHargaDeliv"
                        style="@style/Harga"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/gotham_light"
                        android:text="Rp. 16.500"
                        android:textColor="@color/Dark" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="14dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Total Price:"
                        android:textAppearance="@style/SubTitle" />

                    <TextView
                        android:id="@+id/txtTotalPrice"
                        style="@style/Harga"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/gotham_medium"
                        android:text="Rp. 992.500"
                        android:textColor="@color/primaryBrown" />
                </LinearLayout>

            </LinearLayout>
            <Button
                android:id="@+id/btn_submit_review"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="25dp"
                android:background="@drawable/button_submit_review"
                android:text="SUBMIT"
                android:textColor="#FFFFFF"
                android:textSize="20dp"
                android:textStyle="bold"/>


        </LinearLayout>

    </androidx.core.widget.NestedScrollView>



</LinearLayout>