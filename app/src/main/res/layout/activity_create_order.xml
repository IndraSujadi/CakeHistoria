<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Create_order">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight="23dp"
            android:layout_marginLeft="23dp">

            <TextView
                android:id="@+id/textView16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/Dark"
                android:fontFamily="@font/gotham_bold"
                android:text="Your Cake"
                android:textSize="18sp"
                android:gravity="center"
                android:layout_marginTop="41dp"
                android:layout_marginBottom="3dp"
                />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    />
            </ScrollView>

            <TextView
                android:id="@+id/textView18"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Category"
                android:gravity="center"
                android:textSize="12sp"
                android:textColor="@color/Dark"
                android:fontFamily="@font/gotham_medium"
                android:layout_marginTop="22dp"/>

            <Spinner
                android:id="@+id/spinCategory"
                android:layout_width="261dp"
                android:layout_height="35dp"
                android:layout_marginTop="14dp"
                android:layout_gravity="center"
                android:background="@drawable/spinner_border"
                android:autofillHints="Choose One"/>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="27dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />
            </ScrollView>

            <TextView
                android:id="@+id/textView20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Additional Figures"
                android:layout_marginTop="50dp"
                android:textAppearance="@style/SubTitle"
                android:gravity="center"
                />

            <TextView
                android:id="@+id/textView21"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="12dp"
                android:text="Upload the figure image that you want to attached in your cake to0"
                android:textAppearance="@style/Paragraph"/>

            <Button
                android:id="@+id/button3"
                android:layout_marginTop="20dp"
                android:layout_width="83dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:text="Upload"
                android:background="@drawable/brown_button"
                android:fontFamily="@font/gotham_medium"
                android:textSize="10sp"
                android:textColor="@color/Light"/>

            <TextView
                android:id="@+id/textView22"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Additional Text"
                android:gravity="center"
                android:textAppearance="@style/SubTitle"
                android:layout_marginTop="35dp"/>

            <TextView
                android:id="@+id/textView23"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="will be written on top of the cake"
                android:textAppearance="@style/Paragraph"
                android:layout_marginTop="10dp"
                android:gravity="center"/>

            <EditText
                android:id="@+id/editText"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="13dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="Type here..."
                android:textColorHint="#828282"
                android:background="@drawable/background"
                android:fontFamily="@font/gotham_medium"
                android:textSize="11sp"
                android:paddingLeft="10dp"/>

            <TextView
                android:id="@+id/textView24"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Special Orders"
                android:layout_marginTop="35dp"
                android:gravity="center"
                android:textAppearance="@style/SubTitle"/>

            <EditText
                android:id="@+id/editText2"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:ems="10"
                android:gravity="start|top"
                android:inputType="textMultiLine"
                android:layout_marginTop="14dp"
                android:background="@drawable/background"/>

            <TextView
                android:id="@+id/textView25"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="When you want the cake should be ready?"
                android:layout_marginTop="35dp"
                android:gravity="center"
                android:textAppearance="@style/SubTitle"/>

            <TextView
                android:id="@+id/textView26"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="The cake could be ready min. 2 workdays"
                android:textAppearance="@style/Paragraph"
                android:layout_marginTop="12dp"/>

            <EditText
                android:id="@+id/editText3"
                android:layout_width="171dp"
                android:layout_height="24dp"
                android:ems="10"
                android:inputType="date"
                android:layout_marginTop="12dp"
                android:layout_gravity="center"
                android:background="@drawable/bg_date"/>

            <CheckBox
                android:id="@+id/checkBox2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Include lettercard"
                android:layout_gravity="center"
                android:textAppearance="@style/SubTitle"
                android:buttonTint="@color/primaryBrown"
                android:layout_marginTop="35dp"/>

            <EditText
                android:id="@+id/editText4"
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:ems="10"
                android:gravity="start|top"
                android:hint="Type your message here and we will write it on lettercard. If you want to write the letter by yourself, just make this box empty"
                android:inputType="textMultiLine"
                android:background="@drawable/background"
                android:padding="16dp"
                android:fontFamily="@font/gotham_light_italic"
                android:lineSpacingExtra="5dp"
                android:textAppearance="@style/Paragraph"/>

            <TextView
                android:id="@+id/subDelivery"
                style="@style/SubTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:text="CAKE PRICE" />

            <TextView
                android:id="@+id/txtHargaDeliv"
                android:layout_width="188dp"
                android:layout_height="34dp"
                android:layout_gravity="center"
                android:background="@color/Cream"
                android:fontFamily="@font/gotham_bold"
                android:gravity="center"
                android:text="TextView"
                android:textColor="@color/primaryBrown" />

            <TextView
                android:id="@+id/textView29"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Include Packaging"
                android:gravity="center"
                android:layout_marginTop="6dp"
                android:textAppearance="@style/Paragraph"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="52dp"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="9dp"
                    android:layout_weight="1"
                    android:text="@string/deliv"
                    android:textAlignment="viewEnd"
                    android:textAppearance="@style/SubTitle"
                    tools:ignore="RtlCompat" />

                <ImageButton
                    android:id="@+id/imageButton"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_weight="0"
                    android:background="@drawable/btn_next" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>