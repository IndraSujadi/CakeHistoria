<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Payment_Activity"
    android:background="@color/Light">

        <com.amar.library.ui.StickyScrollView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:stickyFooter="@+id/footerLayout">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginLeft="23dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginRight="23dp">

                    <TextView
                        android:id="@+id/Title"
                        style="@style/TitleText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="29dp"
                        android:text="Receiver" />


                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="5dp"
                        app:srcCompat="@drawable/line" />

                    <TextView
                        android:id="@+id/txtNama"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="14dp"
                        android:text="Alexandria"
                        android:textAppearance="@style/SubTitle" />

                    <TextView
                        android:id="@+id/txtEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="alexandria1@gmail.com"
                        android:textAppearance="@style/Paragraph" />

                    <TextView
                        android:id="@+id/txtNomor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="087888662729"
                        android:textAppearance="@style/Paragraph" />

                    <TextView
                        android:id="@+id/txtAlamat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Central Point B no. 13, Kec. Medan Satria, Bekasi 17310"
                        android:textAppearance="@style/Paragraph" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="21dp"
                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/textView7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/gotham_medium"
                            android:text="The product will received by receiver on:"
                            android:textColor="@color/Dark"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/txtRequestDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="07/03/2020"
                            android:textAlignment="viewEnd"
                            android:textAppearance="@style/Paragraph" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginLeft="23dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginRight="23dp">

                    <TextView
                        android:id="@+id/Title2"
                        style="@style/TitleText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="71dp"
                        android:text="Products" />

                    <ImageView
                            android:id="@+id/imageView5"
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_marginTop="5dp"
                            app:srcCompat="@drawable/line" />

                    <TextView
                        android:id="@+id/txtCakeType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="14dp"
                        android:text="Birthday Custom Cake"
                        android:textAppearance="@style/SubTitle" />

                    <TextView
                        android:id="@+id/txtCakeDetails"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="11dp"
                        android:text="Sponge, Ganache side-cover, butter cream top-cover, cheese flavor, 1-tier, round, with additional figure."
                        android:textAppearance="@style/Paragraph" />

                    <TextView
                        android:id="@+id/txtLettercard"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="11dp"
                        android:text="Include lettercard: Isi di sini"
                        android:textAppearance="@style/Paragraph" />

                    <ImageView
                        android:id="@+id/imgCustomCake"
                        android:layout_width="match_parent"
                        android:layout_height="195dp"
                        android:layout_marginTop="12dp"
                        android:background="@color/Cream" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginLeft="23dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginRight="23dp">

                    <TextView
                        android:id="@+id/Title3"
                        style="@style/TitleText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="25dp"
                        android:text="Prices" />

                    <ImageView
                        android:id="@+id/imageView6"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="5dp"
                        app:srcCompat="@drawable/line" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="14sp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Product Price:"
                            android:textAppearance="@style/SubTitle" />

                        <TextView
                            android:id="@+id/txtHargaProduk"
                            style="@style/Harga"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/gotham_light"
                            android:text="Rp. 876.000"
                            android:textColor="@color/Dark" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="14sp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView11"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Delivery Price:"
                            android:textAppearance="@style/SubTitle" />

                        <TextView
                            android:id="@+id/txtHargaDeliv"
                            style="@style/Harga"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/gotham_light"
                            android:text="Rp. 16.500"
                            android:textColor="@color/Dark" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="14dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView14"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Total Price:"
                            android:textAppearance="@style/SubTitle" />

                        <TextView
                            android:id="@+id/txtTotal1"
                            style="@style/Harga"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/gotham_medium"
                            android:text="Rp. 992.500"
                            android:textColor="@color/primaryBrown" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginLeft="23dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginRight="23dp">

                    <TextView
                        android:id="@+id/Title4"
                        style="@style/TitleText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:text="Select Payment Method" />

                    <ImageView
                        android:id="@+id/imageView7"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="5dp"
                        app:srcCompat="@drawable/line" />

                    <Button
                        android:id="@+id/btnPay"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginTop="12dp"
                        android:background="@drawable/btn_pay"

                       />

   <!--                 <Button
                        android:id="@+id/btnOvo"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginTop="12dp"
                        android:background="@drawable/btnovo"/>

                    <Button
                        android:id="@+id/btnBca"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginTop="12dp"
                        android:background="@drawable/btn_bca"/>

                    <Button
                        android:id="@+id/button2"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:background="@drawable/btn_bca"
                        android:layout_marginTop="12dp"
                        />-->

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/footerLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/shadow"
                    android:paddingVertical="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_marginTop="11dp"
                        >

                        <TextView
                            android:id="@+id/TotalPrice"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/gotham_bold"
                            android:text="Total Price: "
                            android:textAlignment="textEnd"
                            android:layout_weight="1"
                            android:textColor="@color/Dark"
                            android:textSize="16sp"
                            android:layout_marginRight="6dp"/>

                        <TextView
                            android:id="@+id/txtTotal2"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/gotham_bold"
                            android:text="Rp. 992.500"
                            android:textSize="16sp"
                            android:textColor="@color/primaryBrown"
                            />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/textView17"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="10sp"
                        android:fontFamily="@font/gotham_light"
                        android:textColor="#828282"
                        android:gravity="center"
                        android:layout_marginBottom="12dp"
                        android:layout_marginTop="7dp"
                        android:text="Please kindly select the payment method to complete te order." />

                </LinearLayout>


            </LinearLayout>
        </com.amar.library.ui.StickyScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>