<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OnProgress_Detail">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/Light"
            android:theme="@style/AppTheme">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/background"
                android:backgroundTint="@color/Light"
                android:orientation="horizontal"
                android:paddingVertical="14dp"
                android:paddingLeft="18dp"
                android:paddingRight="5dp">

                <ImageButton
                    android:id="@+id/btnBack"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/back_icon_dark"
                    android:background="@color/Light"/>

                <TextView
                    android:id="@+id/txtWelcome"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:layout_marginLeft="10dp"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/gotham_bold"
                    android:gravity="center_vertical"
                    android:text="Order's Detail"
                    android:textColor="@color/Dark"
                    android:textSize="25dp" />
            </LinearLayout>

        </com.google.android.material.appbar.AppBarLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginHorizontal="23dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvOrderID"
                        style="@style/TitleText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="29dp"
                        android:layout_weight=".3"
                        android:gravity="center_vertical"
                        android:text="Order ID: " />

                    <TextView
                        android:id="@+id/txtOrderID"
                        style="@style/Paragraph"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginTop="29dp"
                        android:layout_weight="2"
                        android:text="Loading... "
                        android:textSize="18dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginHorizontal="23dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvOrderStatus"
                        style="@style/TitleText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="29dp"
                        android:layout_weight=".3"
                        android:gravity="center_vertical"
                        android:text="Order Status: " />

                    <TextView
                        android:id="@+id/txtOrderStatus"
                        style="@style/Paragraph"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="29dp"
                        android:layout_weight="2"
                        android:text="Loading... "
                        android:textSize="18dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="23dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginRight="23dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/Title"
                        style="@style/TitleText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="29dp"
                        android:text="Receiver" />


                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="5dp"
                        app:srcCompat="@drawable/line" />

                    <TextView
                        android:id="@+id/txtNama"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="14dp"
                        android:text="Alexandria"
                        android:textAppearance="@style/SubTitle" />

                    <TextView
                        android:id="@+id/txtEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="alexandria1@gmail.com"
                        android:textAppearance="@style/Paragraph" />

                    <TextView
                        android:id="@+id/txtNomor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="087888662729"
                        android:textAppearance="@style/Paragraph" />

                    <TextView
                        android:id="@+id/txtAlamat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Central Point B no. 13, Kec. Medan Satria, Bekasi 17310"
                        android:textAppearance="@style/Paragraph" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="21dp"
                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/textView7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/gotham_medium"
                            android:text="The product will received by receiver on:"
                            android:textColor="@color/Dark"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/txtRequestDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="07/03/2020"
                            android:textAlignment="viewEnd"
                            android:textAppearance="@style/Paragraph" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="23dp"
                    android:layout_marginTop="36dp"
                    android:layout_marginRight="23dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/Title2"
                        style="@style/TitleText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Products" />

                    <ImageView
                        android:id="@+id/imageView5"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="5dp"
                        app:srcCompat="@drawable/line" />

                    <TextView
                        android:id="@+id/txtCakeType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="14dp"
                        android:text="Birthday Custom Cake"
                        android:textAppearance="@style/SubTitle" />

                    <TextView
                        android:id="@+id/txtCakeDetails"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="11dp"
                        android:text="Sponge, Ganache side-cover, butter cream top-cover, cheese flavor, 1-tier, round, with additional figure."
                        android:textAppearance="@style/Paragraph" />

                    <TextView
                        android:id="@+id/txtLettercard"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="11dp"
                        android:text="Include lettercard: Isi di sini"
                        android:textAppearance="@style/Paragraph" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="23dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginRight="23dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/Title3"
                        style="@style/TitleText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="25dp"
                        android:text="Prices" />

                    <ImageView
                        android:id="@+id/imageView6"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="5dp"
                        app:srcCompat="@drawable/line" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="14sp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Product Price:"
                            android:textAppearance="@style/SubTitle" />

                        <TextView
                            android:id="@+id/txtHargaProduk"
                            style="@style/Harga"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/gotham_light"
                            android:text="Rp. 876.000"
                            android:textColor="@color/Dark" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="14sp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView11"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Delivery Price:"
                            android:textAppearance="@style/SubTitle" />

                        <TextView
                            android:id="@+id/txtHargaDeliv"
                            style="@style/Harga"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/gotham_light"
                            android:text="Rp. 16.500"
                            android:textColor="@color/Dark" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="14dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView14"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Total Price:"
                            android:textAppearance="@style/SubTitle" />

                        <TextView
                            android:id="@+id/txtTotal1"
                            style="@style/Harga"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/gotham_medium"
                            android:text="Rp. 992.500"
                            android:textColor="@color/primaryBrown" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/receiveContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:layout_marginBottom="14dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnReceive"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:layout_marginHorizontal="50dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:background="@color/primaryBrown"
                        android:text="Already received?"
                        android:textAllCaps="false"
                        android:textColor="@color/Light" />
                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

<!--    <com.amar.library.ui.StickyScrollView-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="match_parent"-->
