<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/Light</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/Dark</item>
    </style>

    <style name="Review" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/Light</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/Dark</item>
    </style>

    <style name="TitleText">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">#192235</item>
        <item name="android:fontFamily">@font/gotham_bold</item>
    </style>

    <style name="SubTitle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#192235</item>
        <item name="android:fontFamily">@font/gotham_medium</item>
        <item name="android:layout_marginTop">26dp</item>
    </style>

    <style name="InputBox">
        <item name="android:background">@drawable/background</item>
        <item name="android:layout_marginTop">14dp</item>
    </style>

    <style name="Paragraph">
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">@font/gotham_light</item>
        <item name="android:textColor">@color/Dark</item>
        <item name="android:lineSpacingExtra">3dp</item>
        <item name="android:lineSpacingMultiplier">8.5</item>
    </style>

    <style name="Harga">
        <item name="android:textSize">13sp</item>
        <item name="android:textAlignment">textEnd</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="ToolbarTheme" parent="@style/Theme.AppCompat.NoActionBar">
        <!-- Customize color of navigation drawer icon and back arrow -->
        <item name="colorControlNormal">@color/ReviewToolbar</item>
    </style>

    <style name="buttonpager">
        <item name="android:layout_width">83dp</item>
        <item name="android:layout_height">23dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:background">@drawable/btn_cake_type</item>
        <item name="android:fontFamily">@font/gotham_medium</item>
        <item name="android:textColor">@color/primaryBrown</item>
        <item name="android:textSize">10sp</item>
        <item name="android:layout_gravity">center</item>
    </style>
    
    <style name="Margin_color">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">26dp</item>
    </style>

    <style name="customRadioButton">
        <item name="android:paddingStart">6dp</item>
        <item name="android:paddingEnd">6dp</item>
        <item name="android:layout_width">83dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@drawable/text_checked_state</item>
        <item name="android:textSize">10sp</item>
        <item name="android:fontFamily">@font/gotham_medium</item>
        <item name="android:background">@drawable/btn_checked_state</item>
    </style>

    <style name="customRadioButton2">
        <item name="android:paddingStart">6dp</item>
        <item name="android:paddingEnd">6dp</item>
        <item name="android:layout_width">83dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@drawable/text_checked_state</item>
        <item name="android:textSize">10sp</item>
        <item name="android:fontFamily">@font/gotham_medium</item>
        <item name="android:background">@drawable/btn_checked_state</item>
        <item name="android:layout_marginBottom">27dp</item>
    </style>

    <style name="customRadioButton4">
        <item name="android:paddingStart">6dp</item>
        <item name="android:paddingEnd">6dp</item>
        <item name="android:layout_width">83dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@drawable/text_checked_state</item>
        <item name="android:textSize">10sp</item>
        <item name="android:fontFamily">@font/gotham_medium</item>
        <item name="android:background">@drawable/btn_checked_state</item>
        <item name="android:layout_marginTop">14dp</item>
    </style>

    <style name="color_size">
        <item name="android:layout_width">45dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:layout_marginBottom">15dp</item>
    </style>

</resources>
