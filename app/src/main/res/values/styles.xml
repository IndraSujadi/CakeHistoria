<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/Dark</item>
    </style>

    <style name="TitleText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#192235</item>
        <item name="android:fontFamily">@font/gotham_bold</item>
    </style>

    <style name="SubTitle">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#192235</item>
        <item name="android:fontFamily">@font/gotham_medium</item>
        <item name="android:layout_marginTop">26dp</item>
    </style>

    <style name="InputBox">
        <item name="android:background">@drawable/background</item>
        <item name="android:layout_marginTop">14dp</item>
    </style>

    <style name="Paragraph">
        <item name="android:textSize">10sp</item>
        <item name="android:fontFamily">@font/gotham_light</item>
        <item name="android:textColor">@color/Dark</item>
    </style>

    <style name="Harga">
        <item name="android:textSize">12sp</item>
        <item name="android:textAlignment">textEnd</item>
    </style>

</resources>
